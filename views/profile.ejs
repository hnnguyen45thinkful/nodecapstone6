<!doctype html>
<html>
<head>
    <title>Budget Record Tracker</title>
    <meta charset="utf-8">
    <!--This is to load and help with normalize the webpage stylesheet -->   
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/4.2.0/normalize.min.css">
   <!--This is to load Bootstrap CSS -->
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> 

    <!-- Fonts and Font-Awesomeness and CSS from Bootstrap -->
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
<!--This is to load CSS styles in the public folder-->
<link rel="stylesheet" type="text/css" href="css/styles.css">

</head>
<body class="img2">
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page for your Budget Records</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>


<h2>"BUDGET RECORD TRACKER EXPENSES"</h2>
<section class="insert">
    <h3>Insert Past/Present Bills, Expenses, etc.</h3>
    <form action="/insert" method="post">
        <div class="input">
            <label for="name">Name</label>
            <input type="text" id="name" name="name">
        </div>
        <div class="input">
            <label for="amount">Amount</label>
            <input type="text" id="amount" name="amount">
        </div>
        <!-- <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div> -->
        <button type="submit">INSERT</button>
    </form>
</section>
<section class="get">
    <h4>Get Past Bills</h4>
    <a href="/get-data">LOAD BILLS</a>
    <div>
            
                <% for(var i =0; i<bills.length; i++){ %>
                    <article class="item">
                        <p>Name: <%=bills[i].name%></p>
                        <p>Amount: <%=bills[i].amount%></p>
                    </article>
                <% } %>
    </div>
</section>
<section class="update">
    <h4>Update or Revise or Add Bills</h4>
    <form action="/update" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="title">Title</label>
            <input type="text" id="title" name="title">
        </div>
        <div class="input">
            <label for="content">Content</label>
            <input type="text" id="content" name="content">
        </div>
        <div class="input">
            <label for="author">Author</label>
            <input type="text" id="author" name="author">
        </div>
        <button type="submit">UPDATE</button>
    </form>
</section>
</section>
<section class="delete">
    <h4>Delete Past/Present Expenses</h4>
    <form action="/delete" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>









</div>
<!--Load and apply jquery with also a app.js file.-->
<script src="https://code.jquery.com/jquery.min.js"></script>
<script type="text/javascript" src="js/app.js"></script> 
</body>
</html>
